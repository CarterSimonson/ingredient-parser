<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="Description" content="Ingredient Parser Tester"/>
        <meta name="viewport" content="width=device-width"/>
        <title>Ingredient Parser Tester</title>
        <link rel="stylesheet" type="text/css" href="./static/css/index.css"/>
    </head>
    <body>
        <header>
            <h1>Ingredient Parser Tester</h1>
        </header>

        <main>
            <form method="get">
                <input id="sentence" name="sentence" type="search" autocomplete="off" value="{{ sentence }}"/>
            </form>

            {%- if display -%}
            <p class="sentence">
                {%- for token, label in tokens -%}
                <span class="{{ label }}" data-label="{{ label }}">{{ token }}</span><wbr>
                {%- endfor -%}
            </p>

            <section class="cards">
                <div class="card">
                    <h3 class="NAME">Name</h3>
                    <h2>{{ name.text }}</h2>
                </div>

                <div class="card">
                    <h3 class="AMOUNT">Amount</h3>
                    {%- for amount in amounts -%}
                        <h2>{{ amount.quantity }} {{ amount.unit }}</h2>
                        {%- if amount.APPROXIMATE -%}
                        <span class="flag">~</span>
                        {%- endif -%}
                        {%- if amount.SINGULAR -%}
                        <span class="flag">1</span>
                        {%- endif -%}
                        <br>
                    {%- endfor -%}
                </div>

                <div class="card">
                    <h3 class="COMMENT">Comment</h3>
                    <h2>{{ comment.text }}</h2>
                </div>

                <div class="card">
                    <h3 class="OTHER">Other</h3>
                    <h2>{{ other.text }}</h2>
                </div>
            </section>
            {%- endif -%}
        </main>
    </body>
</html>